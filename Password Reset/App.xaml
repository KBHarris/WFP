<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="Password Reset" Height="250" Width="400">
	<Grid>
		<Label Content="User name:" HorizontalAlignment="Left" Height="36" Margin="40,30,0,0" VerticalAlignment="Top" Width="123" FontSize="20"/>
		<Label Content="Password:" HorizontalAlignment="Left" Height="35" Margin="40,85,0,0" VerticalAlignment="Top" Width="123" FontSize="20"/>
		<TextBox Name="UserName" HorizontalAlignment="Left" Height="36" Margin="163,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="183"/>
		<TextBox Name="Password" HorizontalAlignment="Left" Height="36" Margin="163,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="183" IsReadOnly="True" Background="#FFD4D4D4"/>
		<Button Name="GeneratePassword" Content="Generate Password" HorizontalAlignment="Left" Height="44" Margin="40,163,0,0" VerticalAlignment="Top" Width="116"/>
		<Button Name="Update" Content="Update and Send" HorizontalAlignment="Left" Height="44" Margin="230,163,0,0" VerticalAlignment="Top" Width="116"/>

	</Grid>
</Window>
